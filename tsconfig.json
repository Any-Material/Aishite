{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"jsx": "react-jsx",
		"paths": {
			"@/*": [
				"./source/*"
			]
		},
		"strict": true,
		"allowJs": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.json"
	],
	"exclude": [
		"build/",
		"releases/",
		"node_modules/"
	]
}
